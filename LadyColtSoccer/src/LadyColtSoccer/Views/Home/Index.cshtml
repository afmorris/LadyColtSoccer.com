@{
    ViewData["Title"] = "Home Page";
}

<div class="jumbotron">
    <h1>
        Cloverleaf Girls Soccer
    </h1>
    <h2>
        Boston Market Tickets
    </h2>
    <p class="lead">
        If you are interested in purchasing tickets for the Boston Market team dinner, please fill out the form below and we will contact you shortly!
    </p>
</div>
<div class="container col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
    <form class="form">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" placeholder="Name" required />
        </div>
        <div class="form-group">
            <label for="numberOfTickets">Number of Tickets</label>
            <select class="form-control" id="numberOfTickets">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
                <option>6</option>
                <option>7</option>
                <option>8</option>
                <option>9</option>
                <option>10+</option>
            </select>
        </div>
        <div class="form-group">
            <label>Preferred Method of Contact</label>
            <div class="radio">
                <label>
                    <input type="radio" name="contactChoice" id="contactChoice1" value="phone" checked />
                    Phone
                </label>
            </div>
            <div class="radio">
                <label>
                    <input type="radio" name="contactChoice" id="contactChoice2" value="email" />
                    Email
                </label>
            </div>
        </div>
        <div class="form-group phoneNumber">
            <label for="phoneNumber">Phone Number</label>
            <input type="tel" class="form-control" id="phoneNumber" placeholder="Phone Number" />
        </div>
        <div class="form-group emailAddress">
            <label for="email">Email Address</label>
            <input type="email" class="form-control" id="email" placeholder="Email Address"/>
        </div>
        <div class="form-group">
            <label for="additionalInformation">Additional Information</label>
            <textarea class="form-control" id="additionalInformation" rows="6" placeholder="Input additional information here"></textarea>
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    </form>
</div>